
<div class="picture-flat" style="background-image: url('<%= @flat.picture_url %>')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="picture-flat" style="background-image: url('<%= @flat.picture_url %>')"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place</h5>
        <form action="">
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>


      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex flex-row">
          <div class="d-flex flex-row align-items-center">
            <i class="fas fa-users"></i>
            <span class="ml-2"><%= @flat.number_of_guests %></span>
          </div>
          <div class="d-flex flex-row align-items-center ml-4">
            <i class="fas fa-money-check-alt"></i>
            <span class="ml-2"><%= @flat.price_per_night %>â‚¬</span>
          </div>
        </div>
      </div>

      <div class="flat-show-card d-flex justify-content-between align-items-center">
        <h6 class="no-mb">Share</h6>
        <div>
          <i class="fab fa-facebook-square fa-2x me-2"></i>
          <i class="fab fa-twitter-square fa-2x me-2"></i>
          <i class="fab fa-pinterest-square fa-2x me-2"></i>
          <i class="fa fa-envelope-square fa-2x"></i>
        </div>
      </div>

    </div> <!-- col 4 -->
  </div>
</div>
